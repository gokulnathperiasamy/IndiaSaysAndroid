<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_layout"
    tools:context=".activity.QuestionActivity">

    <include layout="@layout/view_empty_container" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/questions_carousel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="48dp"
        app:autoPlay="false"
        app:fillColor="@android:color/white"
        app:indicatorVisibility="visible"
        app:pageColor="#00000000"
        app:radius="4dp"
        app:slideInterval="3000"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp" />

    <include layout="@layout/view_copyright_message" />

</RelativeLayout>
